<%- include('partials/header') %>
<h1><%= title %></h1>
<form action="/message" method="POST">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="form-group">
    <label for="message_title">Title</label>
    <input id="message_title" name="message_title" type="text" class="form-control" value="<%= typeof message_title !== 'undefined' ? message_title : '' %>" placeholder="Title"/>
  </div>
  <div class="form-group">
    <label for="message_text">Message Text</label>
    <textarea id="message_text" name="message_text" class="form-control" placeholder="Message text"><%= typeof message_text !== 'undefined' ? message_text : '' %></textarea>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>

<% if (errors && errors.length > 0) { %>
  <ul>
    <% errors.forEach(function(error) { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<%- include('partials/footer') %>
